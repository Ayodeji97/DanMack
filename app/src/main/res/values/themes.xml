<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DanMack" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_color</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="backgroundColor">@color/primary_color</item>
        <!-- Customize your theme here. -->

<!--        headline 6 : 20sp -->
<!--        headline 5 : 24sp -->
<!--        Body 1 : 16sp -->
<!--        Body 2 : 14sp -->
<!--        This can change -->
        <item name="textAppearanceHeadline6">@style/CustomiseHeadline6</item>
        <item name="textAppearanceHeadline5">@style/CustomiseHeadline5</item>
        <item name="textAppearanceBody1">@style/CustomiseBody1</item>
        <item name="textAppearanceBody2">@style/CustomiseBody2</item>
    </style>

    <style name="CustomiseHeadline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">@dimen/textSize_18</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/secondary_color</item>
    </style>

    <style name="CustomiseHeadline5" parent="TextAppearance.MaterialComponents.Headline5">
            <item name="android:textSize">@dimen/textSize_32</item>
            <item name="android:fontFamily">@font/montserrat_bold</item>
            <item name="android:textColor">@color/secondary_color</item>
    </style>

    <style name="CustomiseBody1" parent="TextAppearance.MaterialComponents.Body1">

    </style>

    <style name="CustomiseBody2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/secondary_color</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textSize">@dimen/textSize_14</item>
    </style>
    
    <style name="BottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetDialogTheme</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background"> @color/primary_color </item>
    </style>

